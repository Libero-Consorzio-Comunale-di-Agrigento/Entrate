<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?link rel="stylesheet" type="text/css" href="/css/tr4web.css" ?>
<?component name="bandboxVie" extends="bandbox" class="it.finmatica.zkutils.BandboxVie"?>

<zk xmlns:h="http://www.w3.org/1999/xhtml"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.zkoss.org/2005/zul"
    xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

    <window apply="grailsBindComposer" viewModel="@id('vm') @init('dettaglioTariffaDomesticaViewModel')"
            border="normal" sizable="false" width="600px" title=" ">

        <grid sclass="documentoBandaTitolo">
            <rows>
                <row>
                    <cell align="left" valign="center">
                        <label value="@load(c:cat3('Tariffa Domestica', ': ', vm.tariffaDomesticaSelezionata.anno))"
                               class="documentoTitolo"/>
                    </cell>
                </row>
            </rows>
        </grid>
        <grid sclass="form">
            <rows>
                <row>
                    <cell sclass="destra" hflex="3">
                        <h:span class="mandatoryLabel">*</h:span>
                        <label value="Familiari"/>
                    </cell>
                    <cell hflex="3">
                        <intbox hflex="1" mold="rounded" style="text-align: right" maxlength="2"
                                value="@bind(vm.tariffaDomesticaSelezionata.numeroFamiliari)"
                                constraint="no negative: Deve essere un numero positivo"
                                disabled="@load(vm.tipoOperazione eq 'VISUALIZZAZIONE')"/>
                    </cell>
                    <cell hflex="6"/>
                </row>
            </rows>
        </grid>
        <groupbox closable="false">
            <caption label="Tariffa Quota Fissa"/>
            <grid sclass="form">
                <rows>
                    <row>
                        <cell sclass="destra" hflex="3">
                            <h:span class="mandatoryLabel">*</h:span>
                            <label value="Ab.Principale"/>
                        </cell>
                        <cell hflex="3">
                            <decimalbox hflex="1" format="#,##0.0000" mold="rounded" style="text-align: right;"
                                        value="@bind(vm.tariffaDomesticaSelezionata.tariffaQuotaFissa)"
                                        disabled="@load(vm.tipoOperazione eq 'VISUALIZZAZIONE')"/>
                        </cell>
                        <cell sclass="destra" hflex="3">
                            <label value="Altre Utenze"/>
                        </cell>
                        <cell hflex="3">
                            <decimalbox hflex="1" format="#,##0.0000" mold="rounded" style="text-align: right;"
                                        value="@bind(vm.tariffaDomesticaSelezionata.tariffaQuotaFissaNoAp)"
                                        disabled="@load(vm.tipoOperazione eq 'VISUALIZZAZIONE')"/>
                        </cell>
                    </row>
                </rows>
            </grid>
        </groupbox>
        <groupbox closable="false">
            <caption label="Tariffa Quota Variabile"/>
            <grid sclass="form">
                <rows>
                    <row>
                        <cell sclass="destra" hflex="3">
                            <h:span class="mandatoryLabel">*</h:span>
                            <label value="Ab.Principale"/>
                        </cell>
                        <cell hflex="3">
                            <decimalbox hflex="1" format="#,##0.0000" mold="rounded" style="text-align: right;"
                                        value="@bind(vm.tariffaDomesticaSelezionata.tariffaQuotaVariabile)"
                                        disabled="@load(vm.tipoOperazione eq 'VISUALIZZAZIONE')"/>
                        </cell>
                        <cell sclass="destra" hflex="3">
                            <label value="Altre Utenze"/>
                        </cell>
                        <cell hflex="3">
                            <decimalbox hflex="1" format="#,##0.0000" mold="rounded" style="text-align: right;"
                                        value="@bind(vm.tariffaDomesticaSelezionata.tariffaQuotaVariabileNoAp)"
                                        disabled="@load(vm.tipoOperazione eq 'VISUALIZZAZIONE')"/>
                        </cell>
                    </row>
                </rows>
            </grid>
        </groupbox>
        <grid sclass="form">
            <rows>
                <row>
                    <cell sclass="destra" hflex="3">
                        <label value="Svuotamenti Minimi"/>
                    </cell>
                    <cell hflex="3">
                        <intbox hflex="1" mold="rounded" style="text-align: right" maxlength="4"
                                value="@bind(vm.tariffaDomesticaSelezionata.svuotamentiMinimi)"
                                disabled="@load(vm.tipoOperazione eq 'VISUALIZZAZIONE')"/>
                    </cell>
                    <cell hflex="6"/>
                </row>
            </rows>
        </grid>

        <space height="5px"/>
        <h:div sclass="barraPulsanti">
            <h:div>
                <button label="Salva" onClick="@command('onSalva')"
                        mold="trendy" image="/images/afc/16x16/save.png"
                        disabled="@load(vm.tipoOperazione eq 'VISUALIZZAZIONE')"/>
                <button label="Chiudi" onClick="@command('onChiudi')"
                        mold="trendy" image="/images/pulsanti/16x16/window_close.png"/>
            </h:div>
        </h:div>
    </window>
</zk>
