        <script src="/js/decimalbox.js"/>

        <grid sclass="documentoBandaTitolo">
            <rows>
                <row>
                    <cell align="left" valign="center">
                        <label value="@load(vm.titolo)" class="documentoTitolo"/>
                    </cell>
                </row>
            </rows>
        </grid>

        <groupbox closable="false">
            <caption>
                <label value="Tariffa"/>
            </caption>
            <grid sclass="form">
                <rows>
                    <row>
                        <cell sclass="destra" hflex="1">
                            <label value="Tipologia Tariffa"/>
                        </cell>
                        <cell hflex="3">
                            <hlayout valign="middle" hflex="1">
                                <label value="Da"/>
                                <intbox hflex="1" mold="rounded" style="text-align: right;"
                                        value="@bind(vm.filtro.daTipoTariffa)"/>
                                <label value="A"/>
                                <intbox hflex="1" mold="rounded" style="text-align: right;"
                                        value="@bind(vm.filtro.aTipoTariffa)"/>
                            </hlayout>
                        </cell>
                    </row>
                    <row>
                        <cell sclass="destra">
                            <label value="Descrizione"/>
                        </cell>
                        <cell>
                            <textbox value="@bind(vm.filtro.descrizione)" maxlength="60"
                                     style="text-transform: uppercase"
                                     hflex="1" mold="rounded"/>
                        </cell>
                    </row>
                    <row if="#{vm.tipoTributo.tipoTributo eq 'CUNI'}">
                        <cell sclass="destra">
                            <label value="Tipo Canone"/>
                        </cell>
                        <cell>
                            <combobox mold="rounded" hflex="1" readonly="true"
                                      model="@load(vm.listTipologie)" selectedItem="@bind(vm.filtro.tipologiaTariffa)">
                                <template name="model" var="opz">
                                    <comboitem label="@load(opz.descrizione)" value="@load(opz)"/>
                                </template>
                            </combobox>
                        </cell>
                    </row>
                    <row if="#{vm.tipoTributo.tipoTributo ne 'CUNI'}">
                        <cell align="right">
                            <label value="Tar. Base"/>
                        </cell>
                        <cell>
                            <radiogroup selectedItem="@bind(vm.filtro.flagTariffaBase)">
                                <radio value="Tutti" label=" Entrambi " selected="true"/>
                                <radio value="Con" label=" Si "/>
                                <radio value="Senza" label=" No "/>
                            </radiogroup>
                        </cell>
                    </row>
                </rows>
            </grid>
        </groupbox>
